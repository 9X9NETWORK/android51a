<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/storelayer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    android:orientation="vertical">		 
		
    <LinearLayout           
		android:layout_width="fill_parent" 
		android:layout_height="2dip"
		android:layout_gravity="bottom"
		android:gravity="center"				
		android:background="#000000"
		android:orientation="horizontal"
		/>	
		
	<LinearLayout
	    android:id="@+id/category_handle"           
		android:layout_width="fill_parent" 
		android:layout_height="35dip"
		android:layout_gravity="left|center_vertical"
		android:gravity="left|center_vertical"				
		android:background="#FFFFFF"
		android:orientation="horizontal">
	   	<TextView
	    	android:id="@+id/category_name"
	        android:layout_width="wrap_content" 
	        android:layout_height="fill_parent"
	        android:layout_gravity="center"
	        android:gravity="center"  	        
	        android:paddingLeft="25dip"
	        android:paddingRight="25dip"            
	        android:textSize="20sp"
	        android:textColor="#000000"
			android:singleLine="true"
			android:ellipsize="end"		
			android:text="@string/wait"	        
	        />	  		
	    <ImageView
		    android:id="@+id/down_chevron"			        
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_gravity="center"			
			android:gravity="center"									
			android:src="@drawable/nav_list_arrow_down"
			/>		
	</LinearLayout>
		
    <LinearLayout           
		android:layout_width="fill_parent" 
		android:layout_height="2dip"
		android:layout_gravity="bottom"
		android:gravity="center"				
		android:background="#000000"
		android:orientation="horizontal"
		/>	
	
    <FrameLayout           
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent">    	
	   	<ListView
			android:id="@+id/store_list_phone"
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:layout_marginLeft="12dip"
			android:layout_marginRight="12dip"
			android:layout_marginTop="12dip"
			android:layout_gravity="top|center_horizontal"
			android:gravity="top|center_horizontal"				
			android:drawSelectorOnTop="false"
			android:cacheColorHint="@android:color/transparent"
			android:dividerHeight="0dp"
			android:divider="@null"
			/>
	   	<GridView
			android:id="@+id/store_list_tablet"
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:layout_marginLeft="12dip"
			android:layout_marginRight="12dip"
			android:layout_marginTop="12dip"
			android:layout_gravity="top|center_horizontal"
			android:gravity="top|center_horizontal"				
			android:drawSelectorOnTop="false"
			android:cacheColorHint="@android:color/transparent"
			android:dividerHeight="0dp"
			android:divider="@null"
			android:numColumns="2"
			android:stretchMode="columnWidth"
			android:horizontalSpacing="12dp"	
			android:visibility="gone"	
			/>		   	
	   	
	    <LinearLayout   
			android:id="@+id/category_layer"	                
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"		
			android:layout_marginTop="-30dip"
			android:layout_marginLeft="60dip"
			android:layout_marginRight="60dip"
			android:layout_marginBottom="60dip"					
			android:orientation="vertical"
			android:visibility="gone">
			<ImageView				    
				android:layout_width="70dip"
				android:layout_height="70dip"		
				android:layout_gravity="top|center_horizontal"		
				android:gravity="top|center_horizontal"			
				android:src="@drawable/graytriangleup"					
				/>			
		   	<ListView
				android:id="@+id/category_list"
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"		
				android:layout_gravity="top|center_horizontal"
				android:gravity="top|center_horizontal"				
				android:drawSelectorOnTop="false"
				android:cacheColorHint="@android:color/transparent"
				android:background="#A0000000"
				/>	   
		</LinearLayout>	
		
	    <ProgressBar
		    android:id="@+id/store_progress"          
	    	android:layout_width="60dip"
	    	android:layout_height="60dip"
	    	android:layout_gravity="center"
	    	android:gravity="center"
	        android:padding="6dip"			    	
	    	style="@android:style/Widget.ProgressBar.Inverse"
	    	android:visibility="gone"
	    	/>	
	    	
	</FrameLayout>						
</LinearLayout>