	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/notifications_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">				    
		<TextView    			     
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="2dip"
			android:layout_gravity="left|center_vertical"
			android:gravity="left|center_vertical"
			android:textSize="18sp"
			android:textColor="#000000"
			android:text="@string/notifications"		
			android:paddingLeft="10dip"
			android:paddingRight="10dip"	
			/>	
	    <LinearLayout           
			android:layout_width="fill_parent" 
			android:layout_height="2dip"
			android:layout_marginLeft="6dip"
			android:layout_marginRight="6dip"		
			android:layout_gravity="bottom"
			android:gravity="center"				
			android:background="#000000"
			android:orientation="horizontal"
			/>    

	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="12dip"
		    android:layout_marginRight="12dip"	
		    android:layout_marginTop="3dip"	 
		    android:layout_marginBottom="3dip"	 	    
			android:layout_gravity="left|center_vertical"
			android:gravity="left|center_vertical"	       
		    android:orientation="horizontal">		    
	    	<LinearLayout
				android:id="@+id/enable_notifications"				    	    
	    	    android:layout_weight="1"
			    android:layout_width="0dip"
			    android:layout_height="wrap_content"	
			    android:orientation="horizontal">	   	
				<ImageView					
				    android:id="@+id/enable_notifications_image"								        	    
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"	
					android:layout_marginLeft="0dip"
		    		android:layout_marginRight="14dip"					
					android:layout_gravity="left|center_vertical"
					android:src="@drawable/check_checked_52"	
					android:focusable="true"
					android:adjustViewBounds="true"
					android:scaleType="fitXY"	
					/>
				<TextView    		     
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="left|center_vertical"
					android:gravity="left|center_vertical"
					android:textSize="20sp"
					android:textColor="#000000"
					android:text="@string/enable_notifications"		
					/>		
			</LinearLayout>								
	    </LinearLayout>
	    <LinearLayout       
			android:id="@+id/vibrate_notifications_divider"		            
			android:layout_width="fill_parent" 
			android:layout_height="2dip"
			android:layout_marginLeft="6dip"
			android:layout_marginRight="6dip"		
			android:layout_gravity="bottom"
			android:gravity="center"			
			android:background="#A0A0A0"
			android:orientation="horizontal"
			/>   		    		
	    <LinearLayout
			android:id="@+id/vibrate_when_notified"	
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="12dip"
		    android:layout_marginRight="12dip"	
		    android:layout_marginTop="3dip"	 
		    android:layout_marginBottom="3dip"	 	    
			android:layout_gravity="left|center_vertical"
			android:gravity="left|center_vertical"	       
		    android:orientation="horizontal">		    
	    	<LinearLayout
	    	    android:layout_weight="1"
			    android:layout_width="0dip"
			    android:layout_height="wrap_content"	
			    android:orientation="horizontal">	   	
				<ImageView		
				    android:id="@+id/vibrate_when_notified_image"			    	    
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"	
					android:layout_marginLeft="0dip"
		    		android:layout_marginRight="14dip"					
					android:layout_gravity="left|center_vertical"
					android:src="@drawable/check_checked_52"	
					android:focusable="true"
					android:adjustViewBounds="true"
					android:scaleType="fitXY"	
					/>
				<TextView    		     
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="left|center_vertical"
					android:gravity="left|center_vertical"
					android:textSize="20sp"
					android:textColor="#000000"
					android:text="@string/vibrate_when_notified"		
					/>		
			</LinearLayout>								
	    </LinearLayout>		
	    <LinearLayout           
			android:id="@+id/sound_notifications_divider"			        
			android:layout_width="fill_parent" 
			android:layout_height="2dip"
			android:layout_marginLeft="6dip"
			android:layout_marginRight="6dip"		
			android:layout_gravity="bottom"
			android:gravity="center"			
			android:background="#A0A0A0"
			android:orientation="horizontal"
			/>   		    			     		    
	    <LinearLayout
			android:id="@+id/sound_when_notified"			        
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="12dip"
		    android:layout_marginRight="12dip"	
		    android:layout_marginTop="3dip"	 
		    android:layout_marginBottom="3dip"	 	    
			android:layout_gravity="left|center_vertical"
			android:gravity="left|center_vertical"	       
		    android:orientation="horizontal">		    
	    	<LinearLayout
	    	    android:layout_weight="1"
			    android:layout_width="0dip"
			    android:layout_height="wrap_content"	
			    android:orientation="horizontal">	   	
				<ImageView				
				    android:id="@+id/sound_when_notified_image"						    	    	    
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"	
					android:layout_marginLeft="0dip"
		    		android:layout_marginRight="14dip"					
					android:layout_gravity="left|center_vertical"
					android:src="@drawable/check_checked_52"	
					android:focusable="true"
					android:adjustViewBounds="true"
					android:scaleType="fitXY"	
					/>
				<TextView    		     
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="left|center_vertical"
					android:gravity="left|center_vertical"
					android:textSize="20sp"
					android:textColor="#000000"
					android:text="@string/sound_when_notified"		
					/>		
			</LinearLayout>								
	    </LinearLayout>					     		    
    </LinearLayout>