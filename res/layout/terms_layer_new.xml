<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/termslayer_new"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    android:orientation="vertical"
    android:visibility="gone">
    <LinearLayout
        android:id="@+id/terms_back"	        
	    android:layout_width="match_parent"
	    android:layout_height="60dip"
	    android:orientation="horizontal"
	    android:background="#F6F5F1">
		<ImageView					    	    
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"	
			android:layout_marginLeft="12dip"
			android:layout_marginRight="6dip"
			android:layout_gravity="center"
			android:src="@drawable/icon_back_black"	
			android:focusable="true"						
			/>		  
		<ImageView
	        android:id="@+id/terms_app_icon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dip"
	        android:layout_marginBottom="5dip"
	        />	 		
		<TextView     
		    android:id="@+id/terms_banner_text"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_gravity="top"
			android:gravity="center"
			android:textSize="22sp"
			android:textColor="#000000"
			android:text=""					
			android:paddingLeft="3sp"
			/>										    
	</LinearLayout>		
    <LinearLayout  
        android:id="@+id/terms_gossamer"    
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_marginLeft="12dip"
	    android:layout_marginRight="12dip"			  
	    android:layout_marginTop="12dip"
	    android:layout_marginBottom="12dip"				      
	    android:orientation="vertical">		
	    <ScrollView
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:background="#FFFFFF">
	        <FrameLayout
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent">    
		        <LinearLayout
			        android:id="@+id/terms_content"
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
				   	android:orientation="vertical">		
		    		<WebView
				        android:id="@+id/terms_content_html"		        
						android:layout_width="fill_parent"
						android:layout_height="0dip"
						android:layout_gravity="center"
						android:layout_marginTop="20dip"
						android:layout_marginLeft="10dip"
						android:layout_marginRight="10dip"				
						android:layout_weight="1"
						android:padding="3dip"
						android:gravity="center"
						android:textSize="14sp"
						android:textColor="#000000"
						android:background="#FF0000"
						/>					   	
			    </LinearLayout>
		        <LinearLayout
			        android:id="@+id/privacy_content"
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
				   	android:orientation="vertical">
		    		<WebView
				        android:id="@+id/privacy_content_html"		        
						android:layout_width="fill_parent"
						android:layout_height="0dip"
						android:layout_gravity="center"
						android:layout_marginTop="20dip"
						android:layout_marginLeft="10dip"
						android:layout_marginRight="10dip"				
						android:layout_weight="1"
						android:padding="3dip"
						android:gravity="center"
						android:textSize="14sp"
						android:textColor="#000000"
						android:background="#FF0000"
						/>			    		
			    </LinearLayout>		
		    </FrameLayout>    
	    </ScrollView>				
	</LinearLayout>
</LinearLayout>