<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/direct_ad_layer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
	<FrameLayout
	    android:id="@+id/direct_ad_layer"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    />
        
	<io.vov.vitamio.widget.CenterLayout
		android:id="@+id/video_ad_container"
	  	android:layout_width="match_parent"
	 	android:layout_height="300dip"
	 	android:layout_marginTop="60dip"
	  	android:orientation="vertical"
	  	android:background="#FFFF00">
	    <SurfaceView
	        android:id="@+id/video_ad_surface"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_gravity="center"
	        android:visibility="visible">
	    </SurfaceView>
	</io.vov.vitamio.widget.CenterLayout>

	<FrameLayout 
	    android:id="@+id/skip_ad_button"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"  
	    android:layout_gravity="right|top"
	    android:gravity="right|top"
	    android:orientation="vertical"
	    android:padding="6dip"
	    android:background="@drawable/btn_playback_skip">
	    	
		<LinearLayout 
		    android:id="@+id/skip_ad_button_phase_1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"  
		    android:layout_gravity="center"
		    android:gravity="center"
		    android:orientation="vertical"
		    android:padding="6dip"
		    android:visibility="visible">
		    <TextView
		       	android:id="@+id/skip_ad_button_phase_1_text_1"		        
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"  
			    android:layout_gravity="right|top"
			    android:gravity="right|top"   
			    android:text="@string/skip_ads_1"
			    android:textSize="18sp"
				android:textColor="#AAAAAA"			    
			    />
			<LinearLayout 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"  
			    android:layout_gravity="right|center_vertical"
			    android:gravity="right|center_vertical"
			    android:orientation="horizontal"
			    android:visibility="visible">		    
			    <TextView
			       	android:id="@+id/skip_ad_button_phase_1_text_2"		        		        
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"  
				    android:layout_gravity="right|top"
				    android:gravity="right|top"   
				    android:text="@string/skip_ads_2"
				    android:textSize="18sp"			    
				    android:textColor="#AAAAAA"
				    />	    
			    <TextView
			       	android:id="@+id/skip_ad_button_countdown"		        		        
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content" 
				    android:layout_marginLeft="3dip"
				    android:layout_marginRight="3dip" 
				    android:layout_gravity="right|top"
				    android:gravity="right|top"   
				    android:textSize="18sp"			    
				    android:textColor="#FFFFFF"				    
				    />	  				    
			    <TextView
			       	android:id="@+id/skip_ad_button_phase_1_text_3"		        		        
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"  
				    android:layout_gravity="right|top"
				    android:gravity="right|top"   
				    android:text="@string/skip_ads_3"
				    android:textSize="18sp"		
				    android:textColor="#AAAAAA"				    	    
				    />	  				    
			</LinearLayout>
		</LinearLayout>

		<LinearLayout 
		    android:id="@+id/skip_ad_button_phase_2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"  
		    android:layout_gravity="center"
		    android:gravity="center"
		    android:orientation="vertical"
		    android:padding="6dip"
		    android:visibility="invisible">
		    <TextView
		       	android:id="@+id/skip_ad_button_phase_2_text"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"  
			    android:layout_gravity="right|top"
			    android:gravity="right|top"   
			    android:text="@string/skip_ad"
			    android:textSize="24sp"
			    android:textColor="#FFFFFF"		
			    />    
		</LinearLayout>
				
	</FrameLayout>
	
</FrameLayout>