<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/password_section"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="16dip"
	android:orientation="vertical">
	
	<LinearLayout
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:orientation="vertical">
		<TextView    			     
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="2dip"
			android:layout_gravity="left|center_vertical"
			android:gravity="left|center_vertical"
			android:textSize="12sp"
			android:textColor="#999999"
			android:text="@string/change_password"		
			android:paddingLeft="10dip"
			android:paddingRight="10dip"
			android:textAllCaps="true"	
			/>			
	    <LinearLayout           
			android:layout_width="fill_parent" 
			android:layout_height="2dip"
			android:layout_marginLeft="6dip"
			android:layout_marginRight="6dip"		
			android:layout_gravity="bottom"
			android:gravity="center"				
			android:background="#D7D7D7"
			android:orientation="horizontal"
			/>    
	
	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="12dip"
		    android:layout_marginRight="12dip"	
		    android:layout_marginTop="3dip"	 
		    android:layout_marginBottom="3dip"	 	    
			android:layout_gravity="left|center_vertical"
			android:gravity="left|center_vertical"	       
		    android:orientation="horizontal">
		    <LinearLayout
			    android:layout_width="0dip"
			    android:layout_height="wrap_content"	
			    android:layout_weight="0.55"    
			    android:orientation="horizontal">	   	
				<ImageView					    	    
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"	
					android:layout_marginRight="8dip"
					android:layout_gravity="left|center_vertical"
					android:src="@drawable/icon_password"	
					android:focusable="true"						
					/>
				<TextView    		     
					android:layout_width="wrap_content"
					android:layout_height="fill_parent"
					android:layout_gravity="left|center_vertical"
					android:gravity="left|center_vertical"
					android:textSize="18sp"
					android:textColor="#000000"
					android:text="@string/current"		
					android:paddingLeft="8sp"
					android:paddingRight="8sp"	
					/>		
			</LinearLayout>				   		
			<EditText
			    android:id="@+id/settings_old_password"			        
				android:layout_width="0dip"
				android:layout_height="fill_parent"
				android:layout_weight="0.45"
				android:layout_gravity="left|center_vertical"			
				android:gravity="left|center_vertical"
				android:textSize="18sp"
				android:textColor="#000000"											
				android:paddingLeft="3sp"			
				android:singleLine="true"
				android:cursorVisible="true"
				android:textCursorDrawable="@null"		
				android:password="true"		
				android:background="@drawable/textfield_tray"
				android:nextFocusDown="@+id/settings_new_password"								
				android:nextFocusForward="@+id/settings_new_password"									
				/>											    
		</LinearLayout>    
	    <!-- LinearLayout           
			android:layout_width="fill_parent" 
			android:layout_height="2dip"
			android:layout_marginLeft="6dip"
			android:layout_marginRight="6dip"		
			android:layout_gravity="bottom"
			android:gravity="center"				
			android:background="#D7D7D7"
			android:orientation="horizontal"
			/-->     
	    
	     <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="12dip"
		    android:layout_marginRight="12dip"	
		    android:layout_marginTop="3dip"	 
		    android:layout_marginBottom="3dip"	 	    
			android:layout_gravity="left|center_vertical"
			android:gravity="left|center_vertical"	       
		    android:orientation="horizontal">
		    <LinearLayout
			    android:layout_width="0dip"
			    android:layout_height="wrap_content"	
			    android:layout_weight="0.55"    
			    android:orientation="horizontal">	   	
				<ImageView					    	    
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"	
					android:layout_marginRight="8dip"
					android:layout_gravity="left|center_vertical"
					android:src="@drawable/icon_password"	
					android:focusable="true"						
					/>
				<TextView    		     
					android:layout_width="wrap_content"
					android:layout_height="fill_parent"
					android:layout_gravity="left|center_vertical"
					android:gravity="left|center_vertical"
					android:textSize="18sp"
					android:textColor="#000000"
					android:text="@string/newpassword"		
					android:paddingLeft="8sp"
					android:paddingRight="8sp"	
					/>		
			</LinearLayout>				   		
			<EditText
			    android:id="@+id/settings_new_password"			        
				android:layout_width="0dip"
				android:layout_height="fill_parent"
				android:layout_weight="0.45"
				android:layout_gravity="left|center_vertical"			
				android:gravity="left|center_vertical"
				android:textSize="18sp"
				android:textColor="#000000"											
				android:paddingLeft="3sp"		
				android:singleLine="true"
				android:cursorVisible="true"
				android:textCursorDrawable="@null"		
				android:password="true"		
				android:background="@drawable/textfield_tray"
				android:nextFocusDown="@+id/settings_verify_password"								
				android:nextFocusForward="@+id/settings_verify_password"													
				/>											    
		</LinearLayout>    
	    <!-- LinearLayout           
			android:layout_width="fill_parent" 
			android:layout_height="2dip"
			android:layout_marginLeft="6dip"
			android:layout_marginRight="6dip"		
			android:layout_gravity="bottom"
			android:gravity="center"				
			android:background="#D7D7D7"
			android:orientation="horizontal"
			/-->      
	    
	     <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="12dip"
		    android:layout_marginRight="12dip"	
		    android:layout_marginTop="3dip"	 
		    android:layout_marginBottom="3dip"	 	    
			android:layout_gravity="left|center_vertical"
			android:gravity="left|center_vertical"	       
		    android:orientation="horizontal">
		    <LinearLayout
			    android:layout_width="0dip"
			    android:layout_height="wrap_content"	
			    android:layout_weight="0.55"    
			    android:orientation="horizontal">	   	
				<ImageView					    	    
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"	
					android:layout_marginRight="8dip"
					android:layout_gravity="left|center_vertical"
					android:src="@drawable/icon_password"	
					android:focusable="true"						
					/>
				<TextView    		     
					android:layout_width="wrap_content"
					android:layout_height="fill_parent"
					android:layout_gravity="left|center_vertical"
					android:gravity="left|center_vertical"
					android:textSize="18sp"
					android:textColor="#000000"
					android:text="@string/confirm"		
					android:paddingLeft="8sp"
					android:paddingRight="8sp"	
					/>		
			</LinearLayout>				   		
			<EditText
			    android:id="@+id/settings_verify_password"			        
				android:layout_width="0dip"
				android:layout_height="fill_parent"
				android:layout_weight="0.45"
				android:layout_gravity="left|center_vertical"			
				android:gravity="left|center_vertical"
				android:textSize="18sp"
				android:textColor="#000000"												
				android:paddingLeft="3sp"			
				android:singleLine="true"
				android:cursorVisible="true"
				android:textCursorDrawable="@null"		
				android:password="true"
				android:background="@drawable/textfield_tray"
				android:nextFocusDown="@+id/password_save"								
				android:nextFocusForward="@+id/password_save"													
				/>											    
		</LinearLayout>    
    </LinearLayout>
    
</LinearLayout>