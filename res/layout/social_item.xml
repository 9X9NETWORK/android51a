<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:descendantFocusability="blocksDescendants">    
	<LinearLayout
	    android:id="@+id/social_block"	    
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_marginTop="10dip"
	    android:layout_marginLeft="10dip"
	    android:layout_marginRight="10dip"	    	    	    
	    android:orientation="vertical"
		android:descendantFocusability="blocksDescendants"
		android:background="#FFFFFF"	
	    android:padding="8dip">      
	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">    
		    <LinearLayout
		    	android:layout_width="match_parent"
		    	android:layout_height="match_parent"
		    	android:orientation="vertical">	   
			    <LinearLayout
			    	android:layout_width="match_parent"
			    	android:layout_height="wrap_content"
			    	android:orientation="horizontal"
			    	android:visibility="gone">	  		    	
				    <TextView
				        android:id="@+id/soc_counter"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="6dip"
				        android:layout_gravity="left|top"	        
				        android:gravity="left|top"
				        android:textSize="32dip"
				        android:textColor="#000000"
				        android:textStyle="bold"
				        /> 	    	
				    <TextView
				        android:id="@+id/soc_what"
				        android:layout_weight="1"
				        android:layout_width="0dip"
				        android:layout_height="wrap_content"
				        android:layout_marginRight="6dip"
				        android:layout_gravity="right|top"	        
				        android:gravity="right|top"
				        android:textSize="18dip"
				        android:textColor="#444444"
				        /> 				          
			    </LinearLayout>  
			    <TextView
			        android:id="@+id/retweeted"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="6dip"
			        android:layout_gravity="left|top"	        
			        android:gravity="left|top"
			        android:textSize="16sp"
			        android:textColor="#777777"
			        android:visibility="gone"
			        />	 
			    <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal">
				    <ImageView
				        android:id="@+id/soc_user_thumb"
				        android:layout_width="50dip"
				        android:layout_height="50dip"
					    android:layout_gravity="left|top"	        
					    android:gravity="left|top"			  
					    android:layout_marginRight="8dip"      
				        />
				    <TextView
				        android:id="@+id/title"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="6dip"
				        android:layout_gravity="left|top"	        
				        android:gravity="left|top"
				        android:textSize="20sp"
				        android:textColor="#555555"
				        android:maxLines="2"
				        android:ellipsize="end"
				        />	    
			    </LinearLayout>
			    <LinearLayout
			    	android:layout_width="match_parent"
			    	android:layout_height="wrap_content"
			    	android:orientation="horizontal">	   			        
				    <TextView
				        android:id="@+id/message_ago"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="6dip"
				        android:layout_gravity="left|top"	        
				        android:gravity="left|top"
				        android:textSize="12sp"
				        android:textColor="#999999"
				        />	    
				    <TextView
				        android:id="@+id/message_source"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="left|top"	        
				        android:gravity="left|top"
				        android:textSize="12sp"
				        android:textColor="#999999"
				        />	 				        		
			    </LinearLayout>        
			   	<!-- TextView
			        android:id="@+id/text"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="8dip"
			        android:layout_marginBottom="8dip"
			        android:textSize="14sp"
				    android:textColor="#777777"       
			        /-->  		
			       
			   	<LinearLayout
			   	    android:id="@+id/line_by_line"
			   	    android:layout_width="match_parent"
			   	    android:layout_height="wrap_content"
			   	    android:orientation="vertical"
			   	    />
			   	
			    <!-- WebView
			        android:id="@+id/webtext"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_marginTop="8dip"
			        android:layout_marginBottom="8dip"
			        android:background="#FFFFFF"
			        /-->
			    
			    <FrameLayout
			        android:id="@+id/soc_image_container"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:layout_marginTop="6dip"
			    	android:orientation="vertical"
			    	android:visibility="gone">	       	    
				    <ImageView
				        android:id="@+id/soc_image"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
					    android:layout_gravity="left|top"	        
					    android:gravity="left|top"			        
				        />
				    <ImageView		
				        android:id="@+id/soc_image_play"				        		    
						android:layout_width="50dip"
						android:layout_height="50dip"
						android:layout_gravity="center"		
						android:gravity="center"	
						android:src="@drawable/icon_playlist"		
						android:visibility="visible"						
						/>			
				</FrameLayout>    
			    <LinearLayout
			        android:id="@+id/soc_mosaic"
			    	android:layout_width="match_parent"
			    	android:layout_height="wrap_content"
			    	android:orientation="vertical">	   
				    <LinearLayout
				        android:id="@+id/soc_mosaic_row_1"
				    	android:layout_width="match_parent"
				    	android:layout_height="wrap_content"
				    	android:orientation="horizontal">		
					    <ImageView
					        android:id="@+id/soc_image_1"
					        android:layout_weight="1"
					        android:layout_width="0dip"
					        android:layout_height="wrap_content"		        
					        android:visibility="gone"
					        />		
					    <ImageView
					        android:id="@+id/soc_image_2"
					        android:layout_weight="1"
					        android:layout_width="0dip"
					        android:layout_height="wrap_content"
					        android:layout_marginLeft="8dip"		        
					        android:visibility="gone"
					        />	
					    <ImageView
					        android:id="@+id/soc_image_3"
					        android:layout_weight="1"
					        android:layout_width="0dip"
					        android:layout_height="wrap_content"		 
					        android:layout_marginLeft="8dip"						               
					        android:visibility="gone"
					        />						        					        		    	
				    </LinearLayout>
				    <LinearLayout
				        android:id="@+id/soc_mosaic_row_2"
				    	android:layout_width="match_parent"
				    	android:layout_height="wrap_content"
				    	android:orientation="horizontal">		
					    <ImageView
					        android:id="@+id/soc_image_4"
					        android:layout_weight="1"
					        android:layout_width="0dip"
					        android:layout_height="wrap_content"		        
					        android:visibility="gone"
					        />		
					    <ImageView
					        android:id="@+id/soc_image_5"
					        android:layout_weight="1"
					        android:layout_width="0dip"
					        android:layout_height="wrap_content"		    
					        android:layout_marginLeft="8dip"						            
					        android:visibility="gone"
					        />	
					    <ImageView
					        android:id="@+id/soc_image_6"
					        android:layout_weight="1"
					        android:layout_width="0dip"
					        android:layout_height="wrap_content"		        
					        android:layout_marginLeft="8dip"						        
					        android:visibility="gone"
					        />						        					        		    	
				    </LinearLayout>			    
				</LinearLayout>		
			    <TextView
			        android:id="@+id/link_name"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="6dip"
			        android:layout_gravity="left|top"	        
			        android:gravity="left|top"
			        android:textSize="12sp"
			        android:textColor="#999999"
			        android:visibility="gone"
			        />		
			    <TextView
			        android:id="@+id/link_description"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="6dip"
			        android:layout_gravity="left|top"	        
			        android:gravity="left|top"
			        android:textSize="12sp"
			        android:textColor="#666666"
			        android:visibility="gone"			        
			        />				        		  
			    <TextView
			        android:id="@+id/link_caption"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="6dip"
			        android:layout_gravity="left|top"	        
			        android:gravity="left|top"
			        android:textSize="12sp"
			        android:textColor="#999999"
			        android:visibility="gone"			        
			        />				          
		    </LinearLayout>
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>