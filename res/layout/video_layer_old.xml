	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/video_layer_old"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
    	android:layout_gravity="bottom|right"
    	android:gravity="bottom|right"	    
	    android:background="#00000000"
	    android:orientation="vertical"
	    android:visibility="gone">	
	    	
		<tv.tv9x9.player.SpecialFrameLayout
	    	android:id="@+id/ytwrapper2"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="center"
	    	android:gravity="center"
	    	android:background="#000000">
	    	<FrameLayout
	    	    android:id="@+id/titlecard"		
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical"
				android:background="#000000"
				android:visibility="gone">
		    	<ImageView
			    	android:id="@+id/titlecardbg"
			        android:layout_width="fill_parent" 
			        android:layout_height="fill_parent"
					android:layout_marginTop="4dip"				        			        
					android:adjustViewBounds="true"
					android:scaleType="fitCenter"				
			        />   	
				<TextView
			        android:id="@+id/titlecardtext"		        
					android:layout_width="wrap_content"
					android:layout_height="fill_parent"
					android:layout_gravity="top"
					android:gravity="center"
					android:textSize="42sp"
					android:textColor="#FFFFFF"
					android:paddingLeft="3sp"
					/>	
			</FrameLayout>
			<LinearLayout
			    android:id="@+id/backing_controls"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
		    	android:layout_gravity="center"
		    	android:gravity="center"	    
			    android:background="#000000"
			    android:orientation="vertical"
			    android:visibility="visible">
				<FrameLayout
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
			    	android:layout_gravity="center"
			    	android:gravity="center">
					<ImageView		
			    		android:id="@+id/minify"					    		    
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"	
						android:layout_gravity="left|center_vertical"
						android:gravity="left|center_vertical"
						android:layout_marginTop="6dip"
						android:layout_marginLeft="12dip"					
						android:layout_marginRight="12dip"
						android:src="@drawable/icon_minify"							
						/>	
					<ImageView		
			    		android:id="@+id/flip_up"					    		    
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"	
						android:layout_gravity="center"
						android:gravity="center"
						android:layout_marginTop="6dip"						
						android:layout_marginLeft="12dip"					
						android:layout_marginRight="12dip"
						android:src="@drawable/icon_flip_top"							
						/>
					<LinearLayout
					    android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="right|center_vertical"					    
						android:gravity="right|center_vertical"								
						android:orientation="horizontal">		
						<ImageView
					    	android:id="@+id/playback_share"
					        android:layout_width="wrap_content" 
					        android:layout_height="fill_parent"
					        android:padding="6dip"
							android:src="@drawable/icon_share"
					        />					
						<ImageView
					    	android:id="@+id/playback_follow"
					        android:layout_width="wrap_content" 
					        android:layout_height="fill_parent"
					        android:padding="6dip"
							android:src="@drawable/icon_follow"
					        />					        										   				
						<android.support.v7.app.MediaRouteButton
						    android:id="@+id/media_route_button"
							android:mediaRouteTypes="user"			    
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"			    
						    android:visibility="visible"
						    />							    
					</LinearLayout>						    															    			    
				</FrameLayout>
				<FrameLayout
				    android:layout_width="fill_parent"
				    android:layout_height="0dip"
				    android:layout_weight="1"
			    	android:layout_gravity="center"
			    	android:gravity="center">		
					<ImageView		
			    		android:id="@+id/flip_left"					    		    
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"	
						android:layout_gravity="left|center_vertical"
						android:gravity="left|center_vertical"		
						android:layout_marginLeft="12dip"					
						android:layout_marginRight="12dip"
						android:src="@drawable/icon_flip_left"							
						/>		
					<ImageView		
			    		android:id="@+id/flip_right"					    		    
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"	
						android:layout_gravity="right|center_vertical"
						android:gravity="right|center_vertical"						
						android:layout_marginLeft="12dip"					
						android:layout_marginRight="12dip"
						android:src="@drawable/icon_flip_right"							
						/>					    	    
				</FrameLayout>			
				<FrameLayout
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
			    	android:layout_gravity="center"
			    	android:gravity="center">
					<ImageView		
			    		android:id="@+id/flip_down"					    		    
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"	
						android:layout_gravity="center"
						android:layout_marginBottom="6dip"						
						android:layout_marginLeft="12dip"					
						android:layout_marginRight="12dip"
						android:src="@drawable/icon_flip_down"							
						/>									    
				</FrameLayout>			    					
			</LinearLayout>				
	      	<fragment
			    class="tv.tv9x9.player.VideoBaseActivity$VideoFragment"
			    android:id="@+id/video_fragment_container"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			   	android:layout_gravity="center"
			   	android:gravity="bottom|center_horizontal"
			    android:background="#00000000"
			    />
	  	</tv.tv9x9.player.SpecialFrameLayout>
	  	
		<LinearLayout
		    android:id="@+id/controls"
		    android:layout_width="match_parent"
		    android:layout_height="60dip"
		    android:background="#505050"
		    android:orientation="horizontal">	      	
		    <LinearLayout
			    android:id="@+id/landscape_titles"
			    android:layout_width="400dip"
			    android:layout_height="fill_parent"
			    android:layout_marginLeft="6dip"
			    android:orientation="vertical"
			    android:visibility="gone">
		    	<TextView
	    	    	android:id="@+id/landscape_episode_name"			        
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="22sp"
					android:textColor="#FFFFFF"
					android:gravity="top"
					android:singleLine="true"	
					android:ellipsize="end"	
			    	/>					
		    	<TextView
	    	    	android:id="@+id/landscape_channel_name"			        
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="16sp"
					android:textColor="#D0D0D0"
					android:gravity="top"
					android:singleLine="true"	
					android:ellipsize="end"	
			    	/>	
		    </LinearLayout>
		    
			<ImageView		
	    		android:id="@+id/pause_or_play"				    	    
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"	
				android:layout_marginLeft="12dip"
				android:layout_marginRight="6dip"
				android:layout_gravity="center"
				android:src="@drawable/icon_pause"	
				android:focusable="true"						
				/>		
		    <FrameLayout
			   	android:layout_width="wrap_content"
				android:layout_height="fill_parent">
	 			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="4dip"			
					android:layout_marginLeft="4dip"					
					android:layout_gravity="center"
					android:text="88:88"
					android:textSize="22sp"
					android:textColor="#FFFFFF"
					android:gravity="left"
					android:visibility="invisible"
					/>								
	 			<TextView
					android:id="@+id/position"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="4dip"			
					android:layout_marginLeft="4dip"					
					android:layout_gravity="center"
					android:gravity="right|center_vertical"
					android:text="0:00"
					android:textSize="22sp"
					android:textColor="#FFFFFF"
					/>
 			</FrameLayout>						 		
    
			<FrameLayout
			    android:id="@+id/progresscontainer"
				android:layout_width="fill_parent"
				android:layout_height="30dip"
				android:layout_gravity="left|center_vertical"								
				android:layout_weight="0.5"
				android:gravity="left|center_vertical">	
				<!-- backing is here because of redraw glitches in Android, causing the underbelly to show -->	
				<FrameLayout
					android:id="@+id/backing"
					android:layout_width="fill_parent"
					android:layout_height="4dip"
					android:layout_marginLeft="12dip"
					android:layout_marginRight="12dip"
					android:layout_gravity="left|center_vertical"
					android:gravity="left|center_vertical"									
					android:background="#787878">
				</FrameLayout>			
				<FrameLayout
					android:id="@+id/progressbar"
					android:layout_width="fill_parent"
					android:layout_height="3dip"
					android:layout_weight="1"
					android:layout_marginLeft="12dip"
					android:layout_marginRight="12dip"
					android:layout_gravity="left|center_vertical"
					android:gravity="left|center_vertical"									
					android:background="#A0A0A0">
					<LinearLayout
	 					android:id="@+id/played"
	 					android:layout_width="wrap_content"
	 					android:layout_height="fill_parent"
	 					android:layout_gravity="left"
	 					android:orientation="horizontal"
	 					android:background="#FFFFFF">
					</LinearLayout>																		
				</FrameLayout>		
				<ImageView
				    android:id="@+id/knob"						    
					android:layout_width="35dip"
					android:layout_height="35dip"
					android:layout_gravity="left|center_vertical"
					android:gravity="left|center_vertical"
					android:focusable="true"											
					android:src="@drawable/icon_knob"
					android:adjustViewBounds="true"
					android:scaleType="fitXY"
					/>							
			</FrameLayout>
			<FrameLayout
			   	android:layout_width="wrap_content"
				android:layout_height="fill_parent">	
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="4dip"			
					android:layout_marginLeft="4dip"									
					android:layout_gravity="center"
					android:text="88:88"				
					android:textSize="22sp"
					android:textColor="#FFFFFF"
					android:gravity="right"
					android:visibility="invisible"
					/>  																		
				<TextView
					android:id="@+id/duration"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="4dip"			
					android:layout_marginLeft="4dip"									
					android:layout_gravity="center"
					android:text="0:00"				
					android:textSize="22sp"
					android:textColor="#FFFFFF"
					android:gravity="right"
					/>  
			</FrameLayout> 														
			<ImageView		
	    		android:id="@+id/expand"					    		    
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"	
				android:layout_gravity="center"
				android:layout_marginLeft="6dip"					
				android:layout_marginRight="12dip"
				android:src="@drawable/icon_expand"							
				/>									
		</LinearLayout>
					
		<LinearLayout
		    android:id="@+id/playbackbody"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:layout_gravity="top"
		    android:background="#505050"
		    android:orientation="vertical"
		    android:visibility="gone">
	      	
		    <!-- controls were originally here -->		    			    
					      	
			<tv.tv9x9.player.HorizontalListView
	    	    android:id="@+id/playback_episodes"
			    android:layout_width="fill_parent"
	    		android:layout_height="100dip"
	    		android:layout_marginTop="10dip"
				android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip"	    	
				android:background="#505050"
	    		/>			   

			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="60dip"
			    android:background="#505050"
			    android:orientation="vertical">
			    <TextView
	    	    	android:id="@+id/episode_title"			        
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="-5dip"
					android:textSize="30sp"
					android:textColor="#FFFFFF"
					android:paddingLeft="10dip"
					android:paddingRight="10dip"
					android:gravity="top"
					android:singleLine="true"	
					android:ellipsize="end"	
			    	/>		
			    <TextView
	    	    	android:id="@+id/episode_age"			        
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="-5dip"
					android:textSize="18sp"
					android:textColor="#C0C0C0"
					android:paddingLeft="10dip"
					android:paddingRight="10dip"
					android:paddingBottom="3dip"
					android:gravity="top"
					android:singleLine="true"	
					android:ellipsize="end"	
					android:text="1 month ago"
			    	/>					    				
			</LinearLayout>
		   	<ListView
				android:id="@+id/playback_channel_list"
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"	
				android:drawSelectorOnTop="false"
				android:cacheColorHint="@android:color/transparent"
				android:background="#FFFFFF"
				/>						
	    </LinearLayout>	
	   
	</LinearLayout> 			